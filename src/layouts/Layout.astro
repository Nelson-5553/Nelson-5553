---
import { ClientRouter } from 'astro:transitions';
import NavMenu from '../components/NavMenu.astro';
interface Props {
  title: string;
  class: string;
}
const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link class="rounded-full" rel="icon" href="/img/N5553.png" />
    <meta name="generator" />
    <title>{title}</title>
    <ClientRouter/>
  <!-- flowbite -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flowbite/css/flowbite.css" />
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>

    <!-- AOSJS -->
    <script src="../js/aos.js"></script>
    <!-- Incluir el script del cambio de tema -->
    <script src="../js/theme-toggle.js"></script>
  </head>
  <NavMenu/>
  <!-- <div class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div> -->
  <body class="bg-white dark:bg-[#101c44] h-screen w-screen bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] bg-fixed min-h-screen transition-colors">
    <div class="absolute inset-0 -z-10 h-full w-full"></div>
    <main class="relative min-h-screen">
      <div class="absolute top-4 right-8">
        
      
      </div>
      <div class="flex flex-col justify-center items-center min-h-screen">
        <!-- contenido -->
        <slot />
        
      </div>
      
    </main>
  </body>
</html>
<script>
  import Typed from 'typed.js';
function typedStart() {
  const typed = new Typed('#element', {
    strings: ['<i>¡Te invito a conocer más a fondo mi trabajo!</i>'],
    typeSpeed: 25,
  });
}

typedStart();

document.addEventListener('astro:page-load', () => {
  typedStart();
});

</script>