---
interface Props {
	title: string;
	class: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>

</head>

<body>


    <slot />

</body>
</html>
<script>

    // Importa Splide desde el paquete instalado
    import Splide from '@splidejs/splide';
    import '@splidejs/splide/dist/css/splide.min.css';
    
    var splide = new Splide('#mySplide', {
      direction: 'ttb',
      wheel    : true,
      height   : '100%',  // Ajusta la altura al contenedor, que en este caso es pantalla completa.
    } );
    
    splide.mount();
    
    
    </script>