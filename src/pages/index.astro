<script>
import { createSwapy } from "swapy";

document.addEventListener("DOMContentLoaded", () => {
  const container = document.querySelector(".container") as HTMLElement;
  if (container) {
    createSwapy(container, {
      animation: "dynamic",
      swapMode: "hover",
    });
  }
});

</script>
