---
import Nav from "../../components/nav.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Nelson" class="some-class">
  <div class="w-screen lg:h-screen overflow-x-hidden">
    <div class="w-full h-full max-w-3xl mx-auto py-12 sm:p-12">
      <Nav
      name="Habilidades"
      ruta="/sections/habilities"
      name2="¿Quien soy?"
      ruta2="/sections/personal"
      />

      <div class="text-center mt-32">
        <h1
          class="text-4xl font-bold tracking-tight prose dark:prose-invert sm:text-6xl mb-12"
          transition:name="estudios"
        >
          Trayectoria académica
        </h1>
      </div>

      <ol class="relative border-s border-black dark:border-gray-700">
        <li class="mb-10 ms-4">
          <div
            class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
          >
          </div>
          <time
            class="mb-1 text-sm font-normal leading-none prose dark:prose-invert"
          >
            2023-02 - actualmente
          </time>
          <h3 class="text-lg font-semibold prose dark:prose-invert">
            Sistemas, Ingeniería De Sistemas
          </h3>
          <p class="mb-4 text-base font-normal prose dark:prose-invert">
            Tecnológico Comfenalco, Cartagena De Indias
          </p>
        </li>
        <li class="mb-10 ms-4">
          <div
            class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
          >
          </div>
          <time
            class="mb-1 text-sm font-normal leading-none prose dark:prose-invert"
            >2021-02 - 2022-11</time
          >
          <h3 class="text-lg font-semibold prose dark:prose-invert">
            Sistemas, Tecnología en Desarrollo de Software
          </h3>
          <p class="text-base font-normal prose dark:prose-invert">
            Tecnológico Comfenalco, Cartagena De Indias
          </p>
        </li>
        <li class="ms-4">
          <div
            class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
          >
          </div>
          <time
            class="mb-1 text-sm font-normal leading-none prose dark:prose-invert"
            >2020-06 - 2020-08</time
          >
          <h3 class="text-lg font-semibold prose dark:prose-invert">
            Marketing, Marketing Nivel 1
          </h3>
          <p class="text-base font-normal prose dark:prose-invert">
            Institución Cedesarrollo, Cartagena De Indias
          </p>
        </li>
        <br />
        <li class="mb-10 ms-4">
          <div
            class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
          >
          </div>
          <time
            class="mb-1 text-sm font-normal leading-none prose dark:prose-invert"
            >2019-02 - 2020-11</time
          >
          <h3 class="text-lg font-semibold prose dark:prose-invert">
            Sistemas, Tecnico en sistemas
          </h3>
          <p class="text-base font-normal prose dark:prose-invert">
            Institución Cedesarrollo, Cartagena De Indias
          </p>
        </li>
        <li class="ms-4">
          <div
            class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
          >
          </div>
          <time
            class="mb-1 text-sm font-normal leading-none prose dark:prose-invert"
            >2019</time
          >
          <h3 class="text-lg font-semibold prose dark:prose-invert">
            Curso, Manejo Básico de Herramientas Informáticas
          </h3>
          <p class="text-base font-normal prose dark:prose-invert">
            SENA, Cartagena De Indias
          </p>
        </li>
        <br />
        <li class="ms-4">
          <div
            class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
          >
          </div>
          <time
            class="mb-1 text-sm font-normal leading-none prose dark:prose-invert"
            >2015-01 - 2020-11</time
          >
          <h3 class="text-lg font-semibold prose dark:prose-invert">
            Secundario, Bachiller
          </h3>
          <p class="text-base font-normal prose dark:prose-invert">
            Institución Educativa Madre Teresa de Calcuta, Cartagena De Indias
          </p>
        </li>
      </ol>
    </div>
  </div>
</Layout>
