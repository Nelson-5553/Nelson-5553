---
interface Props {
    Name: string;
    Ruta: string;
}
const { Name, Ruta } = Astro.props;
---

<div class="group p-1 rounded-lg">
  <a 
     href={Ruta}
     class="text-sm font-semibold leading-6 relative inline-block transition-colors duration-300 ease-in-out
            group-hover:text-sky-400 no-underline"
     data-astro-prefetch="tap"
  >
    {Name}
    <span class="absolute bottom-0 left-0 right-0 mx-auto h-0.5 w-full bg-sky-400 origin-center scale-x-0 transition-transform duration-300 ease-in-out group-hover:scale-x-100"></span>
  </a>
</div>
