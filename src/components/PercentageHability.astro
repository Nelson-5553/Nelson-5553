---
const { percentage, name } = Astro.props;
---

<div class="mb-4">
    <div class="flex justify-between mb-1">
      <span class="text-bold font-medium text-blue-800 dark:text-gray-100">{ name }</span>
      <span class="text-sm font-medium text-gray-800 dark:text-gray-100">{ percentage }%</span>
    </div>
    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3">
      <div class="bg-blue-600 h-3 rounded-full" style={`width: ${ percentage }%`}></div>
    </div>
  </div>
  