---
interface Props {
    Name: string;
    Ruta: string;
}
const {Name, Ruta} = Astro.props
---

<div class="group p-1 rounded-lg">
  <a 
     href={Ruta}
     class="text-sm font-semibold leading-6 relative p-1 transition-colors duration-300 ease-in-out
            group-hover:text-sky-400 no-underline"
     data-astro-prefetch="tap"
  >
    {Name}
    <!-- Pseudo-elemento para el borde corregido -->
    <span class="absolute left-0 -bottom-1 h-0.5 w-0 bg-sky-400 transition-all duration-300 ease-in-out group-hover:w-full"></span>
  </a>
</div>
