---
import Books from "./Books.astro"
import Studios from "./studios.astro"


---

<div class="w-full rounded-lg">
    <ul class="flex justify-start text-sm font-medium text-center text-black dark:text-white  rounded-lg sm:flex rtl:divide-x-reverse list-none -mb-2 -ml-6" id="fullWidthTab" data-tabs-toggle="#fullWidthTabContent" role="tablist">
        <li class="w-auto border rounded-tr-lg">
            <button id="stats-tab" data-tabs-target="#stats" type="button" role="tab" aria-controls="stats" aria-selected="false" class=" w-full p-4 rounded-tr-lg  hover:bg-gray-100 focus:outline-none dark:hover:bg-gray-600">Estudios</button>
        </li>
        <li class="w-auto border rounded-tr-lg">
            <button id="about-tab" data-tabs-target="#about" type="button" role="tab" aria-controls="about" aria-selected="false" class=" w-full rounded-tr-lg p-4 hover:bg-gray-100 focus:outline-none dark:hover:bg-gray-600">Certificados</button>
        </li>
        <li class="w-auto border rounded-tr-lg">
            <button id="faq-tab" data-tabs-target="#faq" type="button" role="tab" aria-controls="faq" aria-selected="false" class=" w-full p-4 rounded-tr-lg hover:bg-gray-100 focus:outline-none dark:hover:bg-gray-600">Libros</button>
        </li>
    </ul>
    <div id="fullWidthTabContent" class="">
        <div class="hidden rounded-b-lg border backdrop-blur-md" id="stats" role="tabpanel" aria-labelledby="stats-tab">
           <Studios/>
        </div>
        <div class="hidden p-4 rounded-b-lg border md:p-8 " id="about" role="tabpanel" aria-labelledby="about-tab">
           CERTIFICACIONES
        </div>
        <div class="hidden p-4 rounded-b-lg border" id="faq" role="tabpanel" aria-labelledby="faq-tab">
          <Books>
            </div>
        </div>
    </div>
</div>
<style>
.tab-active {
  @apply bg-blue-100 text-blue-700 font-semibold dark:bg-gray-700 dark:text-white;
}
  </style>